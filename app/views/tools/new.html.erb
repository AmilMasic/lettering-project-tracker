<h1>Add a New Tool</h1>

<%= form_for(@tool) do |f| %>
    <label>Brand: </label>
    <%= f.text_field :brand %><br>

    <label>Name: </label>
    <%= f.text_field :name %><br>

    <%= f.fields_for :project_tools do |pt| %> 
        <label>Favorite Tool </label>
        <h1><%= toggle_favorite(pt) %> <%= pt.name %></h1>
    <% end %>


    <%= f.submit "Add Tool to Project" %>
<% end %>

